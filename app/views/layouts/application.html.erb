<!DOCTYPE html>
<html>
  <head>
    <title><%= current_setting.commerce_name %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body id="page-top">
    <div id="wrapper">
      <%= render "layouts/shared/sidebar" %>
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <%= render "layouts/shared/navbar", layout: :application %>
          <div class="container-fluid">
            <%= render partial: "layouts/shared/flash", flash: flash %>
            <%= yield %>
          </div>
        </div>
        <footer class="sticky-footer" style="background-color: <%= current_setting.footer_color %>;">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright &copy; <%= current_setting.text_footer %> <%= Time.zone.now.year %></span>
            </div>
          </div>
        </footer>
      </div>
    </div>
    <%#= render "layouts/shared/logout_modal" %>

    <%= render 'templates/customer_order/item' %>
  </body>
</html>
