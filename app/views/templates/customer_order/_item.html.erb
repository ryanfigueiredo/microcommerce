<template id="customer-order-item-template">
<div class="col-xl-4 col-md-6 mb-4">
  <div class="card border-left-warning shadow h-100 py-2 border-bottom-warning pulse">
    <div class="card-body">
      <div class="row no-gutters">
        <div class="col">
          <h4 class="small font-weight-bold">
            <i class="fas fa-map-marker-alt mr-2"></i>
            <span id="delivery-address"></span>
          </h4>
          <h4 class="small font-weight-bold">
            <i class="fas fa-box-open mr-2"></i>
            <span id="list-products"></span>
          </h4>
          <h4 class="small font-weight-bold">
            <i class="fas fa-credit-card mr-2" id="credit-card"></i>
            <i class="fas fa-money-bill mr-2" id="money"></i>
            <span id="way-of-payment"></span>
          </h4>
        </div>
        <div class="col-auto">
          <div class="h7 mb-0 font-weight-bold text-gray-800" id="total-value"></div>
        </div>
      </div>

      <div class="d-flex justify-content-between mt-3">
        <div class="h7" id="order-time">
          <i class="fas fa-clock mr-2"></i>
        </div>
        <div class="dropdown no-arrow cursor-pointer">
          <div class="small dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="mr-2">
              <i class="fas fa-circle text-primary"></i> Aguardando envio
            </span>
          </div>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "#", method: :patch, remote: true, data: { confirm: "Alterar status?", url: admin_customer_order_path("id", customer_order: { status: :sent }) }, id:"link-to-update-status", class: "dropdown-item" do %>
              <span class="mr-2">
                <i class="fas fa-circle text-success"></i> Enviado
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
