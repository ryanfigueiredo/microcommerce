<div class="text-xs font-weight-bold text-primary text-uppercase p-3">
  Produtos  <span class="badge badge-primary font-size-100"><%= @products.size %></span>
</div>

<% if @products.any? %>
  <div class="row mt-3">
    <% @products.each do |product|%>
      <div class="col-xl-4 col-md-6 col-sm-12 col-12 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
          <div class="card-body py-0">
            <div class="row no-gutters align-items-center">
              <div class="col mr-2">
                <div class="h6 font-weight-bold text-primary text-uppercase mb-1">
                  <%= product.name %>
                </div>
                <%= display_product_price(product) %>
                <span class="card-text"><%= product.description %></span>

                <div class="mt-2">
                  <%= link_to edit_admin_product_path(product.id), class: "btn btn-secondary btn-circle btn-sm mr-1" do %>
                    <i class="fas fa-pen"></i>
                  <% end %>

                  <%= link_to admin_product_path(product.id), class: "btn btn-danger btn-circle btn-sm mr-1", method: :delete, data: { confirm: "Confirma?" } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </div>
              <div class="col-auto">
                <img src="<%= url_for(product.picture) %>" class="img-fluid rounded" width="100" height="100">
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card bg-info text-white shadow">
    <div class="card-body">
      Nenhum produto cadastrado
    </div>
  </div>
<% end %>

<a class="action-add rounded-circle bg-primary" href="<%= new_admin_product_path %>">
  <i class="fas fa-plus"></i>
</a>
